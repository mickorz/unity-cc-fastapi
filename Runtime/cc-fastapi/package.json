{
  "name": "claude-api-fastify",
  "version": "1.0.0",
  "description": "TypeScript Fastify server for Claude Code CLI with streaming support",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "deploy": "node scripts/deploy.js",
    "deploy:win": "powershell -ExecutionPolicy Bypass -File scripts/build-and-deploy.ps1",
    "deploy:unix": "bash scripts/build-and-deploy.sh"
  },
  "keywords": [
    "claude",
    "fastify",
    "typescript",
    "sse",
    "streaming"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/static": "^9.0.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.5",
    "dotenv": "^16.4.5",
    "fastify": "^5.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
